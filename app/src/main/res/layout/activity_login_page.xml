<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.something.mabdullahk.soop.LoginPage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearlayout"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userIDTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:boxStrokeColor="@color/colorlogo3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rollNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll Number"
                android:inputType="number"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:textColor="@color/colorlogo2"
                android:textColorHighlight="@color/colorlogo3"
                android:textColorHint="@color/colorlogo3" />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linearlayout"
        android:drawableLeft="@drawable/rightarrow"
        android:gravity="center"
        android:background="@drawable/loginborder"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:text="login"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
