                                        android:textSize="18sp"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="holidays, exams, meetings, trips"
                                        android:textSize="12sp"/>



                            </LinearLayout>




                    </LinearLayout>

