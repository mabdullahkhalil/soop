                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student's attendance for the academic year"
                                android:textSize="12sp"/>



                    </LinearLayout>




            </LinearLayout>

