<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorlogo1</item>
        <item name="colorPrimaryDark">@color/colorlogo2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorlogo1</item>
        <item name="colorPrimaryDark">@color/colorlogo1</item>
        <item name="colorAccent">@color/colorlogo1</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.Design.Hint">
    <item name="android:textColor">@color/colorlogo3</item>
    </style>


    <style name="AppThemeBar1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorlogo2</item>
        <item name="colorPrimaryDark">@color/colorlogo2</item>
        <item name="colorAccent">@color/colorlogo2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:color">@color/colorlogo2</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme33" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorlogo2</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="chipTextAppearance1" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
